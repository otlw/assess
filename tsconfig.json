{
	"compilerOptions": {
		"sourceMap": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,

		"module": "es6",
		"moduleResolution": "node",
    "esModuleInterop": true,
		"target": "es6",

		"strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "pretty": true,
    "lib": ["es2017", "DOM"],
    "types": ["node"]
	},
	"compileOnSave": false,
	"include": ["app/**/*"]
}
